<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
"http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
    <servlet>
        <servlet-name>BuyServlet</servlet-name>
        <servlet-class>servlets.BuyServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>BuyServlet</servlet-name>
        <url-pattern>/servlet/buyservlet</url-pattern>
    </servlet-mapping>
    
	<servlet>
        <servlet-name>SellServlet</servlet-name>
        <servlet-class>servlets.SellServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SellServlet</servlet-name>
        <url-pattern>/servlet/sellservlet</url-pattern>
    </servlet-mapping>

	<servlet>
        <servlet-name>GetPortfolio</servlet-name>
        <servlet-class>servlets.GetPortfolio</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>GetPortfolio</servlet-name>
        <url-pattern>/servlet/getportfolio</url-pattern>
    </servlet-mapping>

	<filter>
        <filter-name>LiftFilter</filter-name>
        <display-name>Lift Filter</display-name>
        <description>The Filter that intercepts lift calls</description>
        <filter-class>net.liftweb.http.LiftFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>LiftFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>

